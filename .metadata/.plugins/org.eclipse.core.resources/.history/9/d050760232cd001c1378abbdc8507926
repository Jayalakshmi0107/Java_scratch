package day4;

public class NumberPositiveOrNegative {

	public static void main(String[] args) {

		int i=0;
		if(i>0)
		{
			System.out.println(i+ " Number is positive");
		}
		else if(i<0)
		{
			System.out.println(i+ " Number is negative");
		}
		else 
		{
			System.out.println(i+ " Number is zero");
		}
		
	}

}
